<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteHeight="1dp"
        tools:layout_conversion_absoluteWidth="1024dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="768dp" />

    <TextView
        android:id="@+id/report_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rien"
        tools:layout_conversion_absoluteHeight="175dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="301dp" />

    <com.htsmart.wristband2.dial.DialView
        android:id="@+id/custom_dial_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dv_scale_type="center_crop"
        tools:layout_conversion_absoluteHeight="593dp"
        tools:layout_editor_absoluteY="175dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="593dp" />

</LinearLayout>